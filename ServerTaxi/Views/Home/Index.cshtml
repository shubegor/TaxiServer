<div class="registerForm">
    <label>Введите телефон</label><br />
    <input type="tel" id="phone" /> <br /><br />
    <label>FIO</label><br />
    <input type="text" id="fio" /> <br /><br />
    <label>Email</label><br />
    <input type="email" id="email" /> <br /><br />
    <label>Auto</label><br />
    <input type="text" id="auto" /> <br /><br />
    <label>Auto number</label><br />
    <input type="text" id="autonumber" /> <br /><br />
    <label>Введите пароль</label><br />
    <input type="password" id="password" /><br /><br />
    <input type="submit" id="submit" value="Регистрация" />
</div>


<div class="userInfo" style="display:none;">
    <p>Вы вошли как: <span class="userName"></span></p>
    <input type="button" value="Выйти" id="logOut" />
</div>

<div class="loginForm">
    <h3>Вход на сайт</h3>
    <label>Введите телефон</label><br />
    <input type="tel" id="phoneLogin" /> <br /><br />
    <label>Введите пароль</label><br />
    <input type="password" id="passwordLogin" /><br /><br />
    <input type="submit" id="submitLogin" value="Логин" />
</div>



@section scripts{
    <script type="text/javascript">
    $(function () {
        $('#submit').click(function (e) {
            e.preventDefault();
            var user = {
                Phone: $('#phone').val(),
                FIO: $('#fio').val(),
                Email: $('#email').val(),
                Auto: $('#auto').val(),
                AutoNumber: $('#autonumber').val(),
                RegistrationDate: "2017-10-16",
                Password: $('#password').val(),
                RoleId: 1
            };

            $.ajax({
                url: 'http://localhost:11821/api/Account/Register',
                type: 'POST',
                data: JSON.stringify(user),
                contentType: "application/json; charset=utf-8",
                
                success: function (data) {
                    alert("Регистрация пройдена");
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z + "Ошибка рег");}
            });
        });
    })
    </script>
}